extends layout

block content
  // MAIN REPORT CONTAINER
  div#report.container-fluid
    link(rel='stylesheet', href='/stylesheets/report.css')
    div.row
      div.span12
        hr
    div.row
      div.span12
        h1 NewsPad Activity Log
    div.row
      div.span2
        span.btn.reset_filters Reset Filters
  div.container-fluid
    div.row
      div.span1
      div#report_rows.span10
        table.table-hover.table-condensed.table-striped
          thead
            tr
              th.time 
                span time
              th.doc 
                span doc
              th.action 
                span action
              th.value 
                span value
              th.session 
                span session
          tbody
  script(src='/javascripts/lib/crossfilter.min.js', defer)
  script(src='/javascripts/app/activity_view.js', defer)
  script#row_template(type='text/html')
    |<tr>
    |  <td><%=new Date(time).toUTCString()%></td>
    |  <td class="doc"><%=doc%></td>
    |  <td class="action"><%=action%></td>
    |  <td class="value"><%=value%></td>
    |  <td class="session"><%=session%></td>
    |</tr>
  script#bignum_template(type='text/html')
